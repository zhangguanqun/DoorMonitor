<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_background">

    <TextView
        android:visibility="gone"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/adapter_tv_date"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/example_time"
        android:textColor="@color/colorTextHint"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:id="@+id/adapter_layout_item"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.androidnetworking.widget.ANImageView
            android:id="@+id/adapter_iv_face"
            android:layout_marginRight="16dp"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_tv_person"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:text="@string/unknown_person"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/adapter_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="top"
                android:text="@string/example_time_no_date"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorTextHint"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorDividerLine"/>

</LinearLayout>